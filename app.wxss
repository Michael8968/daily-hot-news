/* 边框样式 */
.border { border: 1rpx solid var(--border-color); }
.border-top { border-top: 1rpx solid var(--border-color); }
.border-bottom { border-bottom: 1rpx solid var(--border-color); }
.border-left { border-left: 1rpx solid var(--border-color); }
.border-right { border-right: 1rpx solid var(--border-color); }

.rounded { border-radius: 10rpx; }
.rounded-lg { border-radius: 20rpx; }
.rounded-full { border-radius: 50%; }

/* 阴影样式 */
.shadow-sm { box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1); }
.shadow { box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1); }
.shadow-lg { box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1); }

/* 动画样式 */
.transition { transition: all 0.3s ease; }
.transition-fast { transition: all 0.15s ease; }
.transition-slow { transition: all 0.5s ease; }

/* 响应式样式 */
@media (max-width: 750rpx) {
  .container {
    padding: 15rpx;
  }
  
  .card {
    padding: 20rpx;
    margin-bottom: 15rpx;
  }
}

/* 无障碍样式 */
.sr-only {
  position: absolute;
  width: 1rpx;
  height: 1rpx;
  padding: 0;
  margin: -1rpx;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: var(--text-color);
}

.loading::before {
  content: '';
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--border-color);
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  color: var(--gray-500);
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: var(--gray-500);
}

/* 错误状态 */
.error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  color: var(--danger-color);
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: var(--danger-color);
  margin-bottom: 20rpx;
}

/* 图片样式 */
.image {
  width: 100%;
  height: auto;
  border-radius: 10rpx;
}

.image-rounded {
  border-radius: 50%;
}

.image-placeholder {
  background-color: var(--gray-200);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--gray-500);
  font-size: 24rpx;
}

/* 列表样式 */
.list {
  background-color: var(--card-bg);
  border-radius: 20rpx;
  overflow: hidden;
}

.list-item {
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
  transition: background-color 0.3s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:hover {
  background-color: var(--gray-100);
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  font-size: 20rpx;
  border-radius: 20rpx;
  background-color: var(--gray-200);
  color: var(--gray-700);
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.tag-primary {
  background-color: var(--primary-color);
  color: var(--white-color);
}

.tag-success {
  background-color: var(--success-color);
  color: var(--white-color);
}

.tag-warning {
  background-color: var(--warning-color);
  color: var(--white-color);
}

.tag-danger {
  background-color: var(--danger-color);
  color: var(--white-color);
}
