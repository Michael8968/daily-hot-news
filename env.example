# 环境变量配置模板
# 复制此文件为 .env 并填入实际值

# 微信小程序配置
WECHAT_APPID=your-app-id
WECHAT_SECRET=your-app-secret

# 云开发配置
CLOUD_ENV_ID=your-cloud-env-id

# 新闻API配置
NEWS_API_KEY=your-news-api-key
NEWS_API_BASE_URL=https://newsapi.org/v2

# AI服务配置
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_API_BASE_URL=https://api.deepseek.com

# 数据库配置
DB_HOST=localhost
DB_PORT=27017
DB_NAME=daily_hot_news
DB_USER=your-db-user
DB_PASSWORD=your-db-password

# Redis配置（可选）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# 推送服务配置
PUSH_TEMPLATE_ID=your-push-template-id
PUSH_ACCESS_TOKEN=your-push-access-token

# 安全配置
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# 第三方服务配置
# 内容安全检查
CONTENT_SECURITY_API_KEY=your-content-security-key

# 图片处理服务
IMAGE_PROCESSING_API_KEY=your-image-processing-key

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 性能配置
REQUEST_TIMEOUT=10000
MAX_CONCURRENT_REQUESTS=10

# 开发环境配置
NODE_ENV=development
DEBUG=true
