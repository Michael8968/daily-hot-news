# EditorConfig 配置文件
# 用于统一不同编辑器的代码风格

# 顶级配置文件
root = true

# 所有文件的通用配置
[*]
# 字符集
charset = utf-8
# 行尾符
end_of_line = lf
# 插入最终换行符
insert_final_newline = true
# 删除行尾空格
trim_trailing_whitespace = true
# 缩进大小
indent_size = 2
# 缩进类型
indent_style = space

# JavaScript 文件
[*.js]
indent_size = 2
indent_style = space

# JSON 文件
[*.json]
indent_size = 2
indent_style = space

# WXML 文件（微信小程序模板文件）
[*.wxml]
indent_size = 2
indent_style = space

# WXSS 文件（微信小程序样式文件）
[*.wxss]
indent_size = 2
indent_style = space

# CSS 文件
[*.css]
indent_size = 2
indent_style = space

# Markdown 文件
[*.md]
trim_trailing_whitespace = false
indent_size = 2
indent_style = space

# YAML 文件
[*.{yml,yaml}]
indent_size = 2
indent_style = space

# 配置文件
[*.{ini,cfg,conf}]
indent_size = 2
indent_style = space

# 包管理器文件
[package.json]
indent_size = 2
indent_style = space

[package-lock.json]
indent_size = 2
indent_style = space

# 微信小程序配置文件
[project.config.json]
indent_size = 2
indent_style = space

[app.json]
indent_size = 2
indent_style = space

[sitemap.json]
indent_size = 2
indent_style = space
